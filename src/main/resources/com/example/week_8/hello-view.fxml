<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #5286d3; -fx-background-radius: 30; -fx-border-radius: 30;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.week_8.WeatherController">
    <styleClass>
        <String fx:value="weather-app" />
    </styleClass>

                <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

                   <HBox alignment="CENTER" spacing="10.0">
        <Label text="Enter City: " />
        <TextField fx:id="cityInput" promptText="e.g. New York" />
        <Button fx:id="Button" text="Get Weather" />
    </HBox>
   <HBox alignment="CENTER" layoutX="30.0" layoutY="30.0" spacing="10.0">
      <children>
      
                               <Label styleClass="weather-label" text="Temperature: " textFill="WHITE" />
         <Label fx:id="temperatureLabel" layoutX="135.0" layoutY="10.0" styleClass="weather-label" textFill="WHITE" />
      </children>
   </HBox>
   <HBox alignment="CENTER" layoutX="30.0" layoutY="76.0" spacing="10.0">
      <children>
         <Label styleClass="weather-label" text="Feels Like: " textFill="WHITE" />
         <Label fx:id="feelsLikeLabel" layoutX="135.0" layoutY="10.0" styleClass="weather-label" textFill="WHITE" />
      </children>
   </HBox>
   <HBox alignment="CENTER" layoutX="30.0" layoutY="113.0" spacing="10.0">
      <children>
         <Label styleClass="weather-label" text="Min Temperature: " textFill="WHITE" />
         <Label fx:id="minTemperatureLabel" layoutX="135.0" layoutY="10.0" styleClass="weather-label" textFill="WHITE" />
      </children>
   </HBox>
   <HBox alignment="CENTER" layoutX="30.0" layoutY="150.0" spacing="10.0">
      <children>
         <Label styleClass="weather-label" text="Max Temperature: " textFill="WHITE" />
         <Label fx:id="maxTemperatureLabel" layoutX="135.0" layoutY="10.0" styleClass="weather-label" textFill="WHITE" />
      </children>
   </HBox>
   <HBox alignment="CENTER" layoutX="30.0" layoutY="187.0" spacing="10.0">
      <children>
         <Label styleClass="weather-label" text="Pressure: " textFill="WHITE" />
         <Label fx:id="pressureLabel" layoutX="135.0" layoutY="10.0" styleClass="weather-label" textFill="WHITE" />
      </children>
   </HBox>
</VBox>
